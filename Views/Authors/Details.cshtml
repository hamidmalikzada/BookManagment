@model BookManagment.Models.ViewModels.AuthorIndexData
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Author</h4>
<hr />
@foreach (var author in Model.Authors)
{
    <div>

        <dl class="row">

            <dt class="col-sm-2">
                First Name:
            </dt>
            <dd class="col-sm-10">
                @author.FirstName
            </dd>
            <dt class="col-sm-2">
                Last Name:
            </dt>
            <dd class="col-sm-10">
                @author.LastName
            </dd>
            <dt class="col-sm-2">
                Books:
            </dt>
            @foreach (var book in Model.Books)
            {
                <dd class="col-sm-10">
                 @book.Title
                </dd>
            }

        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@author.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}


