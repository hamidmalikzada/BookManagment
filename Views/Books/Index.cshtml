@*@model IEnumerable<BookManagment.Models.Book>*@
@model BookManagment.Models.ViewModels.BookIndexData

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
                @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                Publishing Date
                @*@Html.DisplayNameFor(model => model.PublishingDate)*@
            </th>
            <th>
                Category
                @*@Html.DisplayNameFor(model => model.Category)*@
            </th>
            <th>
                Publisher
                @*@Html.DisplayNameFor(model => model.Publisher)*@
            </th>
            <th>Authors</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Books) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
            </td>
            <td>
                @foreach (var author in item.BookAuthors)
                {
                    @author.Author.FullName <br />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
